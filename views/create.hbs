<!-- In case of error, you should display div with class "errorContainer" -->
<!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
{{#if errorsObj}}
<div>
    <div class="errorContainer">
        {{#each errorsObj.messages}}
        <p>{{this}}</p>
        {{/each}}
    </div>
</div>
{{/if}}
<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form action="/crypto/create" method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="Bitcoin" value="{{crypto.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{crypto.image}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" placeholder="31,166.71" value="{{crypto.price}}">
            <label>Description:</label>
            <textarea id="description" name="description"
                placeholder="Introduce your coins...">{{crypto.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod">
                {{#if crypto.paymentMethod}}
                <option value="{{crypto.paymentMethod}}" selected>{{crypto.paymentMethod}}</option>
                {{/if}}
                <option value="crypto-wallet">Crypto Wallet</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="paypal">PayPal</option>
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>
</section>