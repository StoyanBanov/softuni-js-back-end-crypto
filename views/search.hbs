<section class="crypto-search">
    <h1>Search</h1>

    <form class="search-form" action="/crypto/search" method="get">
        <input type="text" class="search-coin" name="name" placeholder="Search here..." value="{{search.name}}">
        <select id="payment" name="paymentMethod">
            <option value="{{search.paymentMethod}}" selected>{{search.paymentMethod}}</option>
            <option value="crypto-wallet">Crypto Wallet</option>
            <option value="credit-card">Credit Card</option>
            <option value="debit-card">Debit Card</option>
            <option value="paypal">PayPal</option>
        </select>
        <button type="submit" class="btn-search">Search</button>
    </form>
    {{#if allCrypto}}
    <div class="search-result">
        <div class="search-list">
            {{#each allCrypto}}
            <div class="coin">
                <div class="coin-img">
                    <img src="{{image}}">
                </div>
                <div class="coin-info">
                    <h1>{{name}}</h1>
                    <p><span>Price: </span>${{price}}</p>
                    <p><span>Payment: </span>{{paymentMethod}}</p>
                </div>

                <a href="/crypto/{{_id}}/details" class="btn-details">Details</a>
            </div>
            {{/each}}
        </div>
    </div>
    {{else}}
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/if}}
</section>